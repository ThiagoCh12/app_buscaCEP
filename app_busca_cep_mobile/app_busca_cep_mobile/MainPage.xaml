<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_busca_cep_mobile.MainPage">

    <StackLayout BackgroundColor="#FFD700" Padding="30" Spacing="30">
        <StackLayout >
            <Image Source="lg" BackgroundColor="Transparent"/>
            <Entry Placeholder="Digite o CEP, somente números.:" PlaceholderColor="#FFA500" BackgroundColor="White" x:Name="CEP" Keyboard="Numeric"/>
            <Button Text="BUSCAR CEP" TextColor="White" BackgroundColor="#00416B" x:Name="btCEP"/>
            <Label Text="" VerticalOptions="Center" HorizontalOptions="Center" x:Name="lblResultado"/>
            
        </StackLayout>
        
    </StackLayout>

</ContentPage>
